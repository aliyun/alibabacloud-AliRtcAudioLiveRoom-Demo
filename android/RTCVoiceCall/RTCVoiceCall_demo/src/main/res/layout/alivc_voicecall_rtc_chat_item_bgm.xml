<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_marginTop="@dimen/alivc_voicecall_margin_16"
        android:id="@+id/alivc_voicecall_bgm_item_ll_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alivc_voicecall_item_bgm_tv_bgm_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="@drawable/alivc_voice_call_bgm_text_color_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/alivc_voicecall_padding_20"
            android:textSize="@dimen/alivc_voicecall_size_text_16"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/alivc_voicecall_item_bgm_iv_play"
            android:layout_marginRight="@dimen/alivc_voicecall_width_iv_22"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/alivc_voicecall_width_iv_22"
            android:layout_height="@dimen/alivc_voicecall_width_iv_22"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/alivc_voicecall_padding_20"
        android:layout_marginTop="@dimen/alivc_voicecall_margin_16"
        android:layout_width="match_parent"
        android:background="@color/alivc_voicecall_color_text_gray"
        android:layout_height="@dimen/alivc_voicecall_line_1px"/>
</LinearLayout>